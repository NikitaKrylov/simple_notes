<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/Jet</item>-->
        <item name="colorPrimary">@color/Jet</item>
        <item name="colorPrimaryVariant">@color/Jet</item>

        <item name="colorSecondary">#67b99a</item>
<!--        <item name="colorSecondary">@color/ash_teal300</item>-->

        <item name="android:colorBackground">@color/DarkSlateGray</item>
        <item name="android:textColorPrimary">@color/default_note_font_color</item>
        <item name="android:textColorSecondary">@color/default_note_font_color</item>
        <item name="android:textColor">@color/default_note_font_color</item>

        <item name="alertDialogTheme">@style/Widget.Dialog.Alert</item>

        <item name="colorSurface">@color/Jet</item>
        <item name="android:statusBarColor">#202121</item>
        <item name="android:navigationBarColor">@color/DarkSlateGray</item>

    </style>



    <style name="Theme.NoteApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


